---
import { getCollection } from 'astro:content';
import PostsLayout from '../../../layouts/PostsLayout.astro';

export async function getStaticPaths() {
  const resourcesEntries = await getCollection('resources',({ id }) => {
    return id.startsWith('es/');
  });
  
  return resourcesEntries.map(entry => ({
      params: { 
          slug: entry.slug.slice(3) 
      }, 
      props: { entry },
  }));
}


const { entry } = Astro.props;
const { Content, headings } = await entry.render()

---
<PostsLayout title={entry.data.title} frontmatter={entry.data} headings={headings}>
  <Content></Content>
</PostsLayout>