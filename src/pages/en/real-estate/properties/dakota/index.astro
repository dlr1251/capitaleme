---
import Layout from "../../../../../layouts/Layout.astro";
---
<Layout title="Dakota">
  <section class="bg-gray-50 py-12">
    <div class="container mx-auto px-6 lg:px-12">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Lote en Dakota</h1>
      <div class="flex flex-col lg:flex-row lg:space-x-12">
        <!-- Left Column: Navigation -->

  
        <!-- Right Column: Property List -->
        <div class="lg:w-4/4">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Example Property -->
            <div class="bg-white shadow-md rounded-lg overflow-hidden">
              <img
                src="/public/real_estate/dakota/vista_3.jpeg"
                alt="Finca en el cielo"
                class="w-full h-48 object-cover"
              />
              <div class="p-6">
                <h3 class="text-lg font-bold text-gray-800">Hermoso lote con espectacular vista sobre la ciudad</h3>
                <p class="text-sm text-gray-600">Municipio: Bello</p>
                <p class="text-sm text-gray-600">Area: 120 mÂ²</p>
                <p class="text-sm text-gray-600">Price (USD): $250,000</p>
                <p class="text-sm text-gray-600">Price (COP): $1,000,000,000</p>
                <p class="text-sm text-gray-600">Price per m2: $2,083</p>
              </div>
              <div class="border-t p-4 bg-gray-50">
                <a
                  href="#"
                  class="text-blue-600 hover:underline font-medium"
                >
                  Contact Seller
                </a>
              </div>
            </div>
            <!-- Add more properties dynamically here -->
          </div>
        </div>
      </div>
    </div>
  </section>

</Layout>
