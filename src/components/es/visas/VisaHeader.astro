---
const { title, workPermit, beneficiaries, type, sponsored, countries  } = Astro.props.frontmatter || Astro.props 
---
<div class="mt-16">
    <div class="flex flex-col md:flex-row bg-slate-100 p-4">

        <div class="text-4xl font-bold text-secondary w-full md:w-1/2">
            {title}
        </div>
        <div class="w-full md:w-1/2 ">
            <div class="text-sm flex flex-row">
                <div class="w-1/3 font-bold">Tipo:</div>
                <div class="w-2/3">{type}</div>
            </div>
            <div class="text-sm flex flex-row">
                <div class="w-1/3 font-bold">Permiso de Trabajo:</div>
                 <div class="w-2/3">{workPermit}</div>
            </div>
            <div class="text-sm flex flex-row">
                <div class="w-1/3 font-bold">Beneficiarios: </div>
                <div class="w-2/3">{beneficiaries}</div>
                    
            </div>
            <div class="text-sm flex flex-row">
                <div class="w-1/3 font-bold">Patrocinada: </div>
                <div class="w-2/3">{sponsored}</div>
                    
            </div>
            <div class="text-sm flex flex-row">
                <div class="w-1/3 font-bold">Países: </div>
                <div class="w-2/3">
                
                {
                    // Check if the array only includes "Exempted"
                    countries.length === 1 && countries.includes("Exempted") ? 'Esta visa es solo para titulares de pasaportes de los países exentos de visa de corto plazo..' :
                    // Check if the array only includes "Not exempted"
                    countries.length === 1 && countries.includes("Not exempted") ? 'Esta visa es solo para titulares de pasaportes de un país que no está exento de visas de corta estancia.' :
                    // Check for other specific combinations or default to listing all countries
                    countries.includes("Exempted") && countries.includes("Not exempted") && countries.includes("Schengen visa") ? 'Todos los países' :
                    // Default case where it lists whatever is in the countries array
                    countries.join(', ')
                }
                </div>
                    
            </div>
        </div>
    </div>
</div>