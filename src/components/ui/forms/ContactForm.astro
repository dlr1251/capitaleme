---
const { lang = 'en' } = Astro.props;
---
<form action="#" method="post" class="w-full max-w-lg mx-auto p-4 bg-white rounded shadow">
  <div class="mb-4">
    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">{lang === 'es' ? 'Nombre completo *' : 'Full Name *'}</label>
    <input type="text" id="name" name="name" class="w-full px-3 py-2 border rounded" required placeholder={lang === 'es' ? 'Tu nombre completo' : 'Your full name'} />
  </div>
  <div class="mb-4">
    <label for="email" class="block text-sm font-medium text-gray-700 mb-2">{lang === 'es' ? 'Correo electrónico *' : 'Email Address *'}</label>
    <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded" required placeholder={lang === 'es' ? 'tu@email.com' : 'your@email.com'} />
  </div>
  <div class="mb-4">
    <label for="message" class="block text-sm font-medium text-gray-700 mb-2">{lang === 'es' ? 'Tu mensaje *' : 'Your Message *'}</label>
    <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border rounded" required placeholder={lang === 'es' ? 'Cuéntanos sobre tu situación...' : 'Tell us about your situation...'}></textarea>
  </div>
  <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded">{lang === 'es' ? 'Enviar mensaje' : 'Send Message'}</button>
</form> 