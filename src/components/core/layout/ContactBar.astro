---
import { PhoneIcon, EnvelopeIcon, MapPinIcon, ClockIcon } from '@heroicons/react/24/outline';
// Contact information bar component
const { lang = 'en' } = Astro.props;

const contactInfo = {
  phone: '+573146022411',
  email: 'info@capitaleme.com',
  whatsapp: '+573146022411',
  address: lang === 'en' ? 'Medellín, Colombia' : 'Medellín, Colombia'
};
---

<div class="bg-primary text-white py-2 px-4 text-sm hidden lg:block">
  <div class="max-w-screen-xl mx-auto flex flex-wrap items-center justify-between">
    <div class="flex items-center space-x-6">
      <!-- Phone -->
      <a href={`tel:${contactInfo.phone}`} class="flex items-center space-x-2 hover:text-secondary transition-colors">
        <PhoneIcon className="w-5 h-5 text-white group-hover:text-secondary transition-colors" aria-hidden="true" />
        <span class="hidden sm:inline">{contactInfo.phone}</span>
      </a>

      <!-- Email -->
      <a href={`mailto:${contactInfo.email}`} class="flex items-center space-x-2 hover:text-secondary transition-colors">
        <EnvelopeIcon className="w-5 h-5 text-white group-hover:text-secondary transition-colors" aria-hidden="true" />
        <span class="hidden sm:inline">{contactInfo.email}</span>
      </a>

      <!-- WhatsApp -->
      <a href={`https://wa.me/${contactInfo.whatsapp.replace(/\s/g, '')}`} target="_blank" rel="noopener noreferrer" class="flex items-center space-x-2 hover:text-green-400 transition-colors">
        <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
        <span class="hidden sm:inline">WhatsApp</span>
      </a>
    </div>

    <div class="flex items-center space-x-4">
      <!-- Address -->
      <div class="flex items-center space-x-2 text-blue-200">
        <MapPinIcon className="w-5 h-5 text-white" aria-hidden="true" />
        <span class="hidden md:inline">{contactInfo.address}</span>
      </div>

      <!-- Office Hours -->
      <div class="flex items-center space-x-2 text-blue-200">
        <ClockIcon className="w-5 h-5 text-white" aria-hidden="true" />
        <span class="hidden lg:inline">{lang === 'en' ? 'Mon-Fri 9AM-6PM' : 'Lun-Vie 9AM-6PM'}</span>
      </div>
    </div>
  </div>
</div> 