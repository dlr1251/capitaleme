// components/MobileTOC.astro
const getHeadings = () => {
  const headings = Array.from(document.querySelectorAll('h2, h3'));
  return headings.map(h => ({
    id: h.id,
    text: h.textContent,
    level: h.tagName === 'H2' ? 2 : 3,
  }));
};
---

<style>
  .mobile-toc-toggle {
    position: fixed;
    bottom: 1rem;
    left: 1rem;
    z-index: 50;
    background: white;
    border-radius: 9999px;
    padding: 0.5rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }

  .mobile-toc-panel {
    position: fixed;
    bottom: 0;
    right: 0;
    left: 0;
    max-height: 70vh;
    background: white;
    overflow-y: auto;
    padding: 1rem;
    z-index: 40;
    border-top: 1px solid #e5e7eb;
  }

  .toc-link {
    display: block;
    padding: 0.5rem 0;
    font-size: 0.9rem;
    border-bottom: 1px solid #eee;
  }

  .toc-link.level-3 {
    padding-left: 1rem;
    font-size: 0.85rem;
    color: #666;
  }
</style>

<script type="module">
  let tocOpen = false;
  let headings = [];

  function toggleTOC() {
    tocOpen = !tocOpen;
    updateTOC();
  }

  function updateTOC() {
    const panel = document.querySelector('#mobile-toc-panel');
    const button = document.querySelector('#mobile-toc-button');
    if (!panel || !button) return;

    panel.innerHTML = '';
    if (!tocOpen) {
      panel.style.display = 'none';
      button.innerHTML = '☰';
      return;
    }

    button.innerHTML = '✖';
    panel.style.display = 'block';

    headings.forEach(h => {
      const link = document.createElement('a');
      link.href = `#${h.id}`;
      link.textContent = h.text;
      link.className = 'toc-link' + (h.level === 3 ? ' level-3' : '');
      panel.appendChild(link);
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    headings = getHeadings();
    const btn = document.querySelector('#mobile-toc-button');
    btn.addEventListener('click', toggleTOC);
    updateTOC();
  });
</script>

<button id="mobile-toc-button" class="mobile-toc-toggle">☰</button>
<div id="mobile-toc-panel" class="mobile-toc-panel" style="display: none;"></div>
