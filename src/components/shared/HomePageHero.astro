---
// Shared HomePageHero component that supports both English and Spanish
const { currentLang = 'en' } = Astro.props;
---

<section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%220.1%22%3E%3Ccircle cx=%2230%22 cy=%2230%22 r=%222%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-4">
          <h1 class="text-4xl lg:text-6xl font-bold leading-tight">
            {currentLang === 'es' 
              ? 'Soluciones Legales Integrales para tu Futuro'
              : 'Comprehensive Legal Solutions for Your Future'
            }
          </h1>
          <p class="text-xl lg:text-2xl text-blue-100 leading-relaxed">
            {currentLang === 'es'
              ? 'Especialistas en inmigración, bienes raíces y servicios legales empresariales. Tu éxito es nuestra prioridad.'
              : 'Specialists in immigration, real estate, and business legal services. Your success is our priority.'
            }
          </p>
        </div>

        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href={currentLang === 'es' ? '/es/contact' : '/en/contact'}
            class="bg-white text-blue-900 px-8 py-4 rounded-lg font-semibold text-lg hover:bg-blue-50 transition-colors duration-300 text-center"
          >
            {currentLang === 'es' ? 'Consulta Gratuita' : 'Free Consultation'}
          </a>
          <a 
            href={currentLang === 'es' ? '/es/about' : '/en/about'}
            class="border-2 border-white text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-white hover:text-blue-900 transition-colors duration-300 text-center"
          >
            {currentLang === 'es' ? 'Conoce Más' : 'Learn More'}
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex items-center space-x-6 pt-8">
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full"></div>
            <span class="text-blue-100">
              {currentLang === 'es' ? 'Más de 500 casos exitosos' : '500+ Successful Cases'}
            </span>
          </div>
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-green-400 rounded-full"></div>
            <span class="text-blue-100">
              {currentLang === 'es' ? 'Atención 24/7' : '24/7 Support'}
            </span>
          </div>
        </div>
      </div>

      <!-- Visual Element -->
      <div class="relative">
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 border border-white/20">
          <div class="text-center space-y-4">
            <div class="text-6xl mb-4">⚖️</div>
            <h3 class="text-2xl font-semibold">
              {currentLang === 'es' ? 'Servicios Principales' : 'Core Services'}
            </h3>
            <div class="space-y-3 text-left">
              <div class="flex items-center space-x-3">
                <span class="text-green-400">✓</span>
                <span>{currentLang === 'es' ? 'Inmigración y Visas' : 'Immigration & Visas'}</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-green-400">✓</span>
                <span>{currentLang === 'es' ? 'Bienes Raíces' : 'Real Estate'}</span>
              </div>
              <div class="flex items-center space-x-3">
                <span class="text-green-400">✓</span>
                <span>{currentLang === 'es' ? 'Derecho Empresarial' : 'Business Law'}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section> 