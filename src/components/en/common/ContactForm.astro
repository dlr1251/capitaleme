<form class="w-full md:max-w-full mx-auto p-3 bg-slate-100 rounded rounded-lg shadow shadow-lg" 
      id="contact-form"  
      action="https://formcarry.com/s/oe6f89XVhFy" 
      method="post" 
      enctype="multipart/form-data">
      <div class="font-bold text-primary pl-3 py-2  bg-slate-100">
        Contact now</div>
  
    <input type="text" id="name" name="name" 
        class="mb-5 
        bg-gray-50 
        border 
        border-gray-300 
        text-gray-900 
        text-sm 
        rounded-lg 
        focus:outline-none focus:border-secondary 
        block 
        w-full 
        p-2.5" 
        placeholder="Your name" 
        required>
  
    <input type="email" id="email" name="email" 
        class="bg-gray-50 
        border 
        border-gray-300 
        text-gray-900 
        text-sm 
        rounded-lg 
        focus:outline-none 
        focus:border-secondary 
        block 
        w-full 
        p-2.5 mb-5" 
        placeholder="name@email.com" required>
  
    <textarea 
        id="message" 
        name="message" 
        rows="8" 
        class="mb-5 
        block 
        p-2.5 
        w-full 
        text-sm 
        text-gray-900 
        bg-gray-50 
        rounded-lg 
        border 
        border-gray-300 
        focus:outline-none 
        focus:border-secondary" 
        placeholder="Write your question here"></textarea>


    <div class="flex items-center">
      <div class="flex items-center w-2/3">      
        <input 
            id="accept_terms" 
            name="accept_terms" 
            type="checkbox" 
            value="true" 
            class="w-4 h-4 border border-gray-600 rounded bg-gray-50 focus:ring-3 focus:ring-secondary" 
            required>      
        <span         
          class="ms-2 text-sm font-medium text-gray-600">I have read and Accept the <span class="text-secondary hover:text-primary hover:cursor-pointer" data-modal-target="terms-modal" data-modal-toggle="terms-modal">Terms & Conditions</span></span>

        
      </div>
      <button type="submit" class="w-1/3 text-white bg-primary hover:bg-secondary rounded  shadow px-5 py-2 text-center">Submit</button>    
      <div id="terms-modal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
          <div class="relative p-4 w-full max-w-2xl max-h-full">
              <!-- Modal content -->
              <div class="relative bg-white rounded-lg shadow">
                  <!-- Modal header -->
                  <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                      <h3 class="text-xl font-semibold text-gray-900">
                          Terms of Service
                      </h3>
                      <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="terms-modal">
                          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                          </svg>
                          <span class="sr-only">Close modal</span>
                      </button>
                  </div>
                  <!-- Modal body -->
                  <div class="p-4 md:p-5 space-y-4">
                    <p class="text-base leading-relaxed text-gray-500">
                      By submitting this form, you authorize the processing of your personal data in accordance with our Privacy Policy, as per the Colombian Habeas Data Law (Law 1581 of 2012). Your information will be used solely to respond to your inquiry. We are committed to safeguarding your data and will not share it with third parties without your consent. You have the right to access, update, or request deletion of your data at any time by contacting us.
                   </p>
                   
                  </div>
                  <!-- Modal footer -->
                  <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b">
                      <button data-modal-hide="terms-modal" id="accept_btn" type="button" class="py-2.5 px-5 ms-3 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-100">Accept</button>
                  </div>
              </div>
          </div>
      </div>
    </div>
</form>

<script is:inline>
  
  const checkbox = document.getElementById('accept_terms');
  const acceptButton = document.getElementById('accept_btn');  
  acceptButton.addEventListener('click', () => {
    checkbox.checked = true;
    console.log('Terms accepted');
    
  });

</script>

