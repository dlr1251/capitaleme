---
import { getCollection } from 'astro:content';
import { getEntry } from 'astro:content';
const featPost = await getEntry('posts', 'en/counting-your-days');


---

<section class="bg-primary text-white py-16">
  <div class="container mx-auto flex flex-col md:flex-row items-center max-w-screen-xl w-2/3">
    <!-- Image Section -->
    <div class="w-full md:w-1/3">
      <img src={featPost.data.image.url} alt="Blog Image" class="rounded-lg shadow-lg">
    </div>
    <!-- Content Section -->
    <div class="w-full md:w-2/3 md:pl-12 mt-8 md:mt-0">
      <h1 class="text-4xl md:text-5xl font-bold leading-tight">{featPost.data.title}</h1>
      <p class="mt-4 text-lg text-gray-300">{featPost.data.description}</p>
      <div class="mt-4 text-gray-200">
        <!-- <p>Published on: {featPost.data.pubDate}</p> -->
        <p>By: {featPost.data.author}</p>
        <!-- <p>Temas: <span class="text-secondary">Tema 1</span>, <span class="text-secondary">Tema 2</span></p> -->
      </div>
      <a href={`blog/${featPost.slug.slice(3)}`} class="mt-6 inline-block bg-secondary hover:bg-yellow-200 text-white font-bold py-2 px-6 rounded-lg">Read more</a>
    </div>
  </div>
</section>