---
// Add component props/imports if needed
const services = [
  "Visas & Immigration",
  "Real Estate Transactions",
  "Business Protection"
];
import CalendlyButton from "../../CalendlyButton";
---

<div class="min-h-screen flex flex-col align-center justify-center px-6 md:px-12 w-full md:w-2/3 mx-auto md:max-w-5xl">  
    <h1 class="text-4xl md:text-6xl font-extrabold text-primary justify-left mt-12">
      Colombian <span class="text-terciary">Legal Experts</span><br />
      Just <span class="text-primary underline decoration-terciary">a click away</span>
    </h1>
    
    <p class="my-6 md:my-12 text-lg md:text-4xl">
      <strong class="block text-terciary text-left">Fast, Affordable, Bilingual</strong>
    </p>

    <div class="flex flex-col md:flex-row justify-between w-full gap-4">
      {services.map(service => (
        <div class="text-primary border-terciary border-b-2 pb-1 md:pb-3 md:text-2xl font-extralight">
          {service}
        </div>
      ))}
    </div>

    <div class="my-8">
      <p class="text-primary w-full md:text-xl md:w-1/3">
        Book a 45 min initial consultation for only <strong>$45 USD</strong>
      </p>
  
      <CalendlyButton client:load />
    </div>

</div>