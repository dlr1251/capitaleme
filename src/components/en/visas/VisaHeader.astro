---
const { title, headings, workPermit, beneficiaries, type, sponsored, countries  } = Astro.props.frontmatter || Astro.props 
---
<div class="mt-16">
    <div class="flex flex-col md:flex-row bg-slate-100 p-4 rounded rounded-lg">

        <div class="md:text-4xl font-bold text-secondary w-full md:w-2/3 p-3">
            {title}
        </div>
        <div class="w-full md:w-1/3 py-3">
            <div class="text-sm flex flex-row p-1">
                <div class="w-1/2 font-bold">Type:</div>
                <div class="w-1/2">{type}</div>
            </div>
            <div class="text-sm flex flex-row p-1">
                <div class="w-1/2 font-bold">Work permit:</div>
                <div class="w-1/2">{workPermit}</div>
            </div>
            <div class="text-sm flex flex-row p-1">
                <div class="w-1/2 font-bold">Beneficiaries: </div>
                <div class="w-1/2">{beneficiaries}</div>
            </div>
            <div class="text-sm flex flex-row p-1">
                <div class="w-1/2 font-bold">Sponsored: </div>
                <div class="w-1/2">{sponsored}</div>
            </div>
            <div class="text-sm flex flex-row p-1">
                <div class="w-1/2 font-bold">Countries: </div>
                <div class="w-1/2">
                
                {
                    // Check if the array only includes "Exempted"
                    countries.length === 1 && countries.includes("Exempted") ? 'This visa is only for passport holders from any of the short-term visa exempted countries.' :
                    // Check if the array only includes "Not exempted"
                    countries.length === 1 && countries.includes("Not exempted") ? 'This visa is only for passport holders from a country that is not exempted for short-stay visas.' :
                    // Check for other specific combinations or default to listing all countries
                    countries.includes("Exempted") && countries.includes("Not exempted") && countries.includes("Schengen visa") ? 'All countries' :
                    // Default case where it lists whatever is in the countries array
                    countries.join(', ')
                }
                </div>
                    
            </div>
        </div>
    </div>
</div>