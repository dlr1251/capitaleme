---
const stats = [
  { title: "Approved visas", value: 135 },
  { title: "Digital Nomad Visas", value: 90 },
  { title: "Retirement Visas", value: 34 },
  { title: "Registered Trademarks", value: 35 },
  { title: "Business Incorporated", value: 32 },
];
const socialLinks = ["Facebook", "TikTok", "Instagram", "YouTube"];
---

<div class="bg-primary my-12 p-8 rounded-lg shadow-xl w-full max-w-5xl mx-auto">
  <h2 class="text-white text-3xl font-extrabold mb-8  uppercase tracking-wider">
    What weâ€™ve done over the past 365 days
  </h2>
  <div class="flex flex-col md:flex-row md:justify-between">
    <!-- Stats Section -->
    <div class="flex-1">
      <ul class="space-y-6">
        {stats.map((stat) => (
          <li class="flex justify-between items-center bg-white px-6 py-4 shadow-lg rounded-lg hover:scale-105 transform transition-transform duration-300">
            <span class="font-semibold text-lg text-primary">{stat.title}</span>
            <span class="font-extrabold text-2xl text-blue-900">{stat.value}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Social Links Section -->
    <div class="flex-1 mt-10 md:mt-0 md:ml-10">
      <h3 class="text-white font-bold text-2xl mb-6 text-center md:text-left">
        Follow Us
      </h3>
      <ul class="space-y-4">
        {socialLinks.map((link) => (
          <li>
            <a
              href="#"
              class="block text-lg font-medium text-white hover:text-blue-900 hover:underline text-center md:text-left transition-all duration-300"
            >
              {link}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>