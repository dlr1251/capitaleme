---
import Navbar from '../components/Navbar.astro';
import Sidebar from '../components/Sidebar.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';

interface Props {
	title: string;	
	frontmatter: any;
}

const { title } = Astro.props;
const { frontmatter } = Astro.props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/isotipo-color.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-2M6FN1YGCD"></script>
		<script>
		window.dataLayer = window.dataLayer || [];
		function gtag(){dataLayer.push(arguments);}
		gtag('js', new Date());

		gtag('config', 'G-2M6FN1YGCD');
		</script>
	</head>
	<body>
		<WhatsAppButton/>
		<Navbar />
		<Sidebar>			
		<h1>{title ? title : frontmatter.title}</h1>
		<div class="max-w-screen-md mx-auto">
			<slot />
		</div>
		</Sidebar>		

		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
		
	</body>
</html>

